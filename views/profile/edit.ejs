<%- include("../partials/navbar") %>

<div class="container mt-5">
  <h2>Edit Profile</h2>
  <form action="/profile/edit" method="POST" class="p-4 shadow bg-light rounded">
    <div class="mb-3">
      <label>Name</label>
      <input name="name" class="form-control" value="<%= currentUser.name || '' %>" />
    </div>
    <div class="mb-3">
      <label>Bio</label>
      <textarea name="bio" class="form-control"><%= currentUser.bio || '' %></textarea>
    </div>
    <div class="mb-3">
      <label>Skills (comma separated)</label>
      <input name="skills" class="form-control" value="<%= currentUser.skills?.join(', ') || '' %>" />
    </div>
    <div class="mb-3">
      <label>Location</label>
      <input name="location" class="form-control" value="<%= currentUser.location || '' %>" />
    </div>
    <button class="btn btn-primary">Save</button>
  </form>
</div>
